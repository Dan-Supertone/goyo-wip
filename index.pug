  script.
    // Smooth Scroll
    $(document).ready( function() {
      $('a').smoothScroll();
    });

    // Player
    let btnPlay, btnPrev, btnNext, btnA, btnB, btnC, btnChA, btnChB, btnChC, isPlay, isOnA, isOnB, isOnC;
    isPlay = false;
    btnPlay = document.querySelector('.btn-play');
    btnPlay.addEventListener('click', function() {
      if (isPlay == false) {
        document.querySelector('img.play').classList.add('hidden');
        document.querySelector('img.pause').classList.remove('hidden');
        isPlay = true
      } else {
        document.querySelector('img.play').classList.remove('hidden');
        document.querySelector('img.pause').classList.add('hidden');
        isPlay = false;
      };
    });

    isOnA = true;
    isOnB = true;
    isOnC = true;
    btnChA = document.querySelector('.channel-btn.btn-a');
    btnChB = document.querySelector('.channel-btn.btn-b');
    btnChC = document.querySelector('.channel-btn.btn-c');
    btnChA.addEventListener('click', function() {
      if(isOnA == true) {
        btnChA.classList.add('off');
        isOnA = false;
      } else {
        btnChA.classList.remove('off');
        isOnA = true;
      };
    });
    btnChB.addEventListener('click', function() {
      if(isOnB == true) {
        btnChB.classList.add('off');
        isOnB = false;
      } else {
        btnChB.classList.remove('off');
        isOnB = true;
      };
    });
    btnChC.addEventListener('click', function() {
      if(isOnC == true) {
        btnChC.classList.add('off');
        isOnC = false;
      } else {
        btnChC.classList.remove('off');
        isOnC = true;
      };
    });

    // Supertone
    let item, itemHeight, background, posFromTop, winH, transPercent;
    item = document.getElementById('supertone');
    background = document.getElementById('background');

    window.addEventListener('scroll', function() {
      itemHeight = document.getElementById('supertone').clientHeight;
      posFromTop = item.getBoundingClientRect().top;
      winH = window.innerHeight;
      if (posFromTop < winH) {
        transPercent = (winH - posFromTop) * 100 / itemHeight;
        background.style.width = transPercent + '%';
      };
    });